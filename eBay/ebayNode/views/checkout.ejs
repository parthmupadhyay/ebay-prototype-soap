<!DOCTYPE html>
<html lang="en" ng-app="checkoutApp" ng-controller="checkoutCtrl">
<head>
    <meta charset="UTF-8">
    <title>Products</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto:500,300,700,400italic,400' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/font-awesome.css">
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link rel="stylesheet" href="/stylesheets/mystyles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="/javascripts/angular.min.js"></script>
    <script src="/angular/checkout.js"></script>
</head>
<body ng-init="getCartData();">

<div ng-include="'header/header.ejs'"></div>
<div class="gap"></div>
<div class="col-sm-3"></div>
<div class="container" style="width: 40%" ng-hide="checkout" >

    <form  method="post" class="creditForm">
        <div class="panel product" style="background-color: #f8f8f8">
            <!-- Default panel contents -->
            <h3 align="center">Enter Credit Card Details</h3>
            <hr>

            <div class="panel-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group  creditCardDiv">
                        <label class="inputCreditNumber" style="padding:10px;" class="col-sm-2 control-label pull-left">Enter Credit card number :</label>
                        <div class="col-sm-10">
                            <input type="text" style="padding:10px;width:123%" ng-model="ccnumber" ng-blur="checkCCNumber();" name="creditCardNum"  id="creditCardNum" class="form-control" required autofocus/>
                        </div>
                        <label class="col-sm-10" style="font-size:small;color:red;" ng-hide="ccnumberValidate">Credit card number not valid</label>
                    </div>
                    <div class="form-group  creditCardDiv">
                        <label style="padding:10px;" for="inputExpdate" >Enter expiration date :</label>
                        <div class="col-sm-10">
                            <input type="text" style="padding:10px;width:123%" maxlength="5" name="expDate" ng-model="expDate" ng-blur="checkExpDate();" id="expDate" class="form-control" placeholder="MM/YY" required/>
                        </div>
                        <label class="col-sm-10" style="font-size:small;color:red;" ng-hide="expDateValidate">Expiration date not valid</label>
                    </div>
                    <div class="form-group  creditCardDiv">
                        <label style="padding:10px;" for="inputCVV">Enter CVV : </label>
                        <div class="col-sm-10">
                            <input style="padding:10px;width:123%" type="password" maxlength="4" ng-model="cvv" ng-blur="checkCvv();" name="cvv" id="cvv" class="form-control" required>
                        </div>
                        <label class="col-sm-10" style="font-size:small;color:red;" ng-hide="cvvValidate">CVV not valid</label>
                    </div>
                    <div class="form-group ">
                        <div class="pull-left signIn" style="padding:10px;">
                           <a href="/processingPayment" ><button type="button" name="submit" class="btn btn-primary">Submit</button></a>
                    </div>
                    </div>
                </form>
            </div>
        </div>
    </form>
</div>
</body>
</html>